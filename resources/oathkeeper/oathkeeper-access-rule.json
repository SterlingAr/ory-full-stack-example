[
  {
    "id": "get-campaigns",
    "description": "Get campaigns",
    "upstream": {
      "url": "http://nginx:5001"
    },
    "match": {
      "url": "http://localhost:4455/api/v1/campaigns",
      "methods": [
        "GET"
      ]
    },
    "authenticators": [
      {
        "handler": "oauth2_introspection",
        "config": {
          "required_scope": [
            "campaigns"
          ]
        }
      }
    ],
    "authorizer": {
      "handler": "keto_engine_acp_ory",
      "config": {
        "required_action": "campaigns:read",
        "required_resource": "campaigns"
      }
    },
    "mutators": [
      {
        "handler": "id_token",
        "config": {
          "claims": "{\"subject\": \"{{ print .Subject }}\"}"
        }
      }
    ]
  }
]