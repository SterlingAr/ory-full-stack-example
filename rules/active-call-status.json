[
  {
    "id": "${ORGANIZATION}-active-call-status-${ENVIROMENT}",
    "description": "Set the status of an active call: ${ORGANIZATION}",
    "upstream": {
      "url": "${RESOURCE_SERVER}"
    },
    "match": {
      "url": "${OATHKEEPER_PROXY_URL}/api/v1/organizations/${ORGANIZATION}/calls/<[0-9]+>/<(ringing|accept|reject|cancel|error|disconnect)>",
      "methods": [
        "PUT"
      ]
    },
    "authenticators": [{
      "handler": "oauth2_introspection",
      "config": {
        "required_scope": [
          "${ORGANIZATION}.calls"
        ]
      }
    }],
    "authorizer": {
      "handler": "keto_engine_acp_ory",
      "config": {
        "required_action": "organizations:${ORGANIZATION}:calls:$1:$2",
        "required_resource": "organizations:${ORGANIZATION}:calls:$1:$2"
      }
    },
    "credentials_issuer": {
      "handler": "id_token"
    }
  }
]