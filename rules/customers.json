[
  {
    "id": "${ORGANIZATION}-create-customer-${ENVIROMENT}",
    "description": "Create a customer for organization: ${ORGANIZATION}",
    "upstream": {
      "url": "${RESOURCE_SERVER}"
    },
    "match": {
      "url": "${OATHKEEPER_PROXY_URL}/api/v1/organizations/${ORGANIZATION}/customers",
      "methods": [
        "POST"
      ]
    },
    "authenticators": [{
      "handler": "oauth2_introspection",
      "config": {
        "required_scope": [
          "${ORGANIZATION}.customers"
        ]
      }
    }],
    "authorizer": {
      "handler": "keto_engine_acp_ory",
      "config": {
        "required_action": "organizations:${ORGANIZATION}:customers:create",
        "required_resource": "organizations:${ORGANIZATION}:customers"
      }
    },
    "credentials_issuer": {
      "handler": "id_token"
    }
  },
  {
    "id": "${ORGANIZATION}-get-customer-${ENVIROMENT}",
    "description": "Get one customer for organization: ${ORGANIZATION}",
    "upstream": {
      "url": "${RESOURCE_SERVER}"
    },
    "match": {
      "url": "${OATHKEEPER_PROXY_URL}/api/v1/organizations/${ORGANIZATION}/customers/<[0-9]+>",
      "methods": [
        "GET"
      ]
    },
    "authenticators": [
      {
        "handler": "oauth2_introspection",
        "config": {
          "required_scope": [
            "${ORGANIZATION}.customers"
          ]
        }
      }
    ],
    "authorizer": {
      "handler": "keto_engine_acp_ory",
      "config": {
        "required_action": "organizations:${ORGANIZATION}:customers:$1:read",
        "required_resource": "organizations:${ORGANIZATION}:customers:$1"
      }
    },
    "credentials_issuer": {
      "handler": "id_token"
    }
  },
  {
    "id": "${ORGANIZATION}-get-customer-by-phone-${ENVIROMENT}",
    "description": "Get one customer by phone for organization: ${ORGANIZATION}",
    "upstream": {
      "url": "${RESOURCE_SERVER}"
    },
    "match": {
      "url": "${OATHKEEPER_PROXY_URL}/api/v1/organizations/${ORGANIZATION}/customers/phone/<([a-zA-Z0-9_\\+]+)>",
      "methods": [
        "GET"
      ]
    },
    "authenticators": [
      {
        "handler": "oauth2_introspection",
        "config": {
          "required_scope": [
            "${ORGANIZATION}.customers"
          ]
        }
      }
    ],
    "authorizer": {
      "handler": "keto_engine_acp_ory",
      "config": {
        "required_action": "organizations:${ORGANIZATION}:customers:phone:$1:read",
        "required_resource": "organizations:${ORGANIZATION}:customers:phone:$1"
      }
    },
    "credentials_issuer": {
      "handler": "id_token"
    }
  },
  {
    "id": "${ORGANIZATION}-get-customers-${ENVIROMENT}",
    "description": "Get customers collection for organization: ${ORGANIZATION}",
    "upstream": {
      "url": "${RESOURCE_SERVER}"
    },
    "match": {
      "methods": [
        "GET"
      ],
      "url": "${OATHKEEPER_PROXY_URL}/api/v1/organizations/${ORGANIZATION}/customers<(\\?page=.+)?>"
    },
    "authenticators": [
      {
        "handler": "oauth2_introspection",
        "config": {
          "required_scope": [
            "${ORGANIZATION}.customers"
          ]
        }
      }
    ],
    "authorizer": {
      "handler": "keto_engine_acp_ory",
      "config": {
        "required_action": "organizations:${ORGANIZATION}:customers:read",
        "required_resource": "organizations:${ORGANIZATION}:customers"
      }
    },
    "credentials_issuer": {
      "handler": "id_token",
      "config": null
    }
  },
  {
    "id": "${ORGANIZATION}-update-customer-${ENVIROMENT}",
    "description": "Update a customer for organization: ${ORGANIZATION}",
    "upstream": {
      "url": "${RESOURCE_SERVER}"
    },
    "match": {
      "url": "${OATHKEEPER_PROXY_URL}/api/v1/organizations/${ORGANIZATION}/customers/<[0-9]+>",
      "methods": [
        "PUT",
        "PATCH"
      ]
    },
    "authenticators": [{
      "handler": "oauth2_introspection",
      "config": {
        "required_scope": [
          "${ORGANIZATION}.customers"
        ]
      }
    }],
    "authorizer": {
      "handler": "keto_engine_acp_ory",
      "config": {
        "required_action": "organizations:${ORGANIZATION}:customers:$1:update",
        "required_resource": "organizations:${ORGANIZATION}:customers:$1"
      }
    },
    "credentials_issuer": {
      "handler": "id_token"
    }
  },
  {
    "id": "${ORGANIZATION}-delete-customer-${ENVIROMENT}",
    "description": "Delete a customer for organization: ${ORGANIZATION}",
    "upstream": {
      "url": "${RESOURCE_SERVER}"
    },
    "match": {
      "url": "${OATHKEEPER_PROXY_URL}/api/v1/organizations/${ORGANIZATION}/customers/<[0-9]+>",
      "methods": [
        "DELETE"
      ]
    },
    "authenticators": [{
      "handler": "oauth2_introspection",
      "config": {
        "required_scope": [
          "${ORGANIZATION}.customers"
        ]
      }
    }],
    "authorizer": {
      "handler": "keto_engine_acp_ory",
      "config": {
        "required_action": "organizations:${ORGANIZATION}:customers:$1:delete",
        "required_resource": "organizations:${ORGANIZATION}:customers:$1"
      }
    },
    "credentials_issuer": {
      "handler": "id_token"
    }
  }
]