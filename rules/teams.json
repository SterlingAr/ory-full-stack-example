[
  {
    "id": "${ORGANIZATION}-create-team-${ENVIROMENT}",
    "description": "Create a team for organization: ${ORGANIZATION}",
    "upstream": {
      "url": "${RESOURCE_SERVER}"
    },
    "match": {
      "url": "${OATHKEEPER_PROXY_URL}/api/v1/organizations/${ORGANIZATION}/teams",
      "methods": [
        "POST"
      ]
    },
    "authenticators": [{
      "handler": "oauth2_introspection",
      "config": {
        "required_scope": [
          "${ORGANIZATION}.teams"
        ]
      }
    }],
    "authorizer": {
      "handler": "keto_engine_acp_ory",
      "config": {
        "required_action": "organizations:${ORGANIZATION}:teams:create",
        "required_resource": "organizations:${ORGANIZATION}:teams"
      }
    },
    "credentials_issuer": {
      "handler": "id_token"
    }
  },
  {
    "id": "${ORGANIZATION}-get-team-${ENVIROMENT}",
    "description": "Get one team for organization: ${ORGANIZATION}",
    "upstream": {
      "url": "${RESOURCE_SERVER}"
    },
    "match": {
      "url": "${OATHKEEPER_PROXY_URL}/api/v1/organizations/${ORGANIZATION}/teams/<[0-9]+>",
      "methods": [
        "GET"
      ]
    },
    "authenticators": [
      {
        "handler": "oauth2_introspection",
        "config": {
          "required_scope": [
            "${ORGANIZATION}.teams"
          ]
        }
      }
    ],
    "authorizer": {
      "handler": "keto_engine_acp_ory",
      "config": {
        "required_action": "organizations:${ORGANIZATION}:teams:$1:read",
        "required_resource": "organizations:${ORGANIZATION}:teams:$1"
      }
    },
    "credentials_issuer": {
      "handler": "id_token"
    }
  },
  {
    "id": "${ORGANIZATION}-get-teams-${ENVIROMENT}",
    "description": "Get team collection for organization: ${ORGANIZATION}",
    "upstream": {
      "url": "${RESOURCE_SERVER}"
    },
    "match": {
      "url": "${OATHKEEPER_PROXY_URL}/api/v1/organizations/${ORGANIZATION}/teams<(\\?page=.+)?>",
      "methods": [
        "GET"
      ]
    },
    "authenticators": [{
      "handler": "oauth2_introspection",
      "config": {
        "required_scope": [
          "${ORGANIZATION}.teams"
        ]
      }
    }],
    "authorizer": {
      "handler": "keto_engine_acp_ory",
      "config": {
        "required_action": "organizations:${ORGANIZATION}:teams:read",
        "required_resource": "organizations:${ORGANIZATION}:teams"
      }
    },
    "credentials_issuer": {
      "handler": "id_token"
    }
  },
  {
    "id": "${ORGANIZATION}-update-team-${ENVIROMENT}",
    "description": "Update a team for organization: ${ORGANIZATION}",
    "upstream": {
      "url": "${RESOURCE_SERVER}"
    },
    "match": {
      "url": "${OATHKEEPER_PROXY_URL}/api/v1/organizations/${ORGANIZATION}/teams/<[0-9]+>",
      "methods": [
        "PUT",
        "PATCH"
      ]
    },
    "authenticators": [{
      "handler": "oauth2_introspection",
      "config": {
        "required_scope": [
          "${ORGANIZATION}.teams"
        ]
      }
    }],
    "authorizer": {
      "handler": "keto_engine_acp_ory",
      "config": {
        "required_action": "organizations:${ORGANIZATION}:teams:$1:update",
        "required_resource": "organizations:${ORGANIZATION}:teams:$1"
      }
    },
    "credentials_issuer": {
      "handler": "id_token"
    }
  },
  {
    "id": "${ORGANIZATION}-delete-team-${ENVIROMENT}",
    "description": "Delete a team for organization: ${ORGANIZATION}",
    "upstream": {
      "url": "${RESOURCE_SERVER}"
    },
    "match": {
      "url": "${OATHKEEPER_PROXY_URL}/api/v1/organizations/${ORGANIZATION}/teams/<[0-9]+>",
      "methods": [
        "DELETE"
      ]
    },
    "authenticators": [{
      "handler": "oauth2_introspection",
      "config": {
        "required_scope": [
          "${ORGANIZATION}.teams"
        ]
      }
    }],
    "authorizer": {
      "handler": "keto_engine_acp_ory",
      "config": {
        "required_action": "organizations:${ORGANIZATION}:teams:$1:delete",
        "required_resource": "organizations:${ORGANIZATION}:teams:$1"
      }
    },
    "credentials_issuer": {
      "handler": "id_token"
    }
  }
]