[
  {
    "id": "${ORGANIZATION}-get-concluded-call-${ENVIROMENT}",
    "description": "Get one concluded call for organization: ${ORGANIZATION}",
    "upstream": {
      "url": "${RESOURCE_SERVER}"
    },
    "match": {
      "url": "${OATHKEEPER_PROXY_URL}/api/v1/organizations/${ORGANIZATION}/calls/<[0-9]+>/concluded/<[0-9]+>",
      "methods": [
        "GET"
      ]
    },
    "authenticators": [
      {
        "handler": "oauth2_introspection",
        "config": {
          "required_scope": [
            "${ORGANIZATION}.calls.concluded"
          ]
        }
      }
    ],
    "authorizer": {
      "handler": "keto_engine_acp_ory",
      "config": {
        "required_action": "organizations:${ORGANIZATION}:calls:$1:concluded:$2:read",
        "required_resource": "organizations:${ORGANIZATION}:calls:$1:concluded:$2"
      }
    },
    "credentials_issuer": {
      "handler": "id_token"
    }
  },
  {
    "id": "${ORGANIZATION}-get-concluded-calls-${ENVIROMENT}",
    "description": "Get concluded calls collection for organization: ${ORGANIZATION}",
    "upstream": {
      "url": "${RESOURCE_SERVER}"
    },
    "match": {
      "url": "${OATHKEEPER_PROXY_URL}/api/v1/organizations/${ORGANIZATION}/calls/<[0-9]+>/concluded<(\\?page=.+)?>",
      "methods": [
        "GET"
      ]
    },
    "authenticators": [{
      "handler": "oauth2_introspection",
      "config": {
        "required_scope": [
          "${ORGANIZATION}.calls.concluded"
        ]
      }
    }],
    "authorizer": {
      "handler": "keto_engine_acp_ory",
      "config": {
        "required_action": "organizations:${ORGANIZATION}:calls:$1:concluded:read",
        "required_resource": "organizations:${ORGANIZATION}:calls:$1:concluded"
      }
    },
    "credentials_issuer": {
      "handler": "id_token"
    }
  }
]