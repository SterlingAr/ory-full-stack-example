[
  {
    "id": "${ORGANIZATION}-get-role-permissions-${ENVIROMENT}",
    "description": "Get permissions belonging to a role for organization: ${ORGANIZATION}",
    "upstream": {
      "url": "${RESOURCE_SERVER}"
    },
    "match": {
      "url": "${OATHKEEPER_PROXY_URL}/api/v1/organizations/${ORGANIZATION}/roles/<[0-9]+>/permissions<(\\?page=.+)?>",
      "methods": [
        "GET"
      ]
    },
    "authenticators": [{
      "handler": "oauth2_introspection",
      "config": {
        "required_scope": [
          "${ORGANIZATION}.roles.permissions"
        ]
      }
    }],
    "authorizer": {
      "handler": "keto_engine_acp_ory",
      "config": {
        "required_action": "organizations:${ORGANIZATION}:roles:$1:permissions:read",
        "required_resource": "organizations:${ORGANIZATION}:roles:$1:permissions"
      }
    },
    "credentials_issuer": {
      "handler": "id_token"
    }
  },
  {
    "id": "${ORGANIZATION}-update-role-permissions-${ENVIROMENT}",
    "description": "Assign permissions to a role for organization: ${ORGANIZATION}",
    "upstream": {
      "url": "${RESOURCE_SERVER}"
    },
    "match": {
      "url": "${OATHKEEPER_PROXY_URL}/api/v1/organizations/${ORGANIZATION}/roles/<[0-9]+>/permissions",
      "methods": [
        "PUT"
      ]
    },
    "authenticators": [{
      "handler": "oauth2_introspection",
      "config": {
        "required_scope": [
          "${ORGANIZATION}.roles.permissions"
        ]
      }
    }],
    "authorizer": {
      "handler": "keto_engine_acp_ory",
      "config": {
        "required_action": "organizations:${ORGANIZATION}:roles:$1:permissions:update",
        "required_resource": "organizations:${ORGANIZATION}:roles:$1:permissions"
      }
    },
    "credentials_issuer": {
      "handler": "id_token"
    }
  }
]